<Player>
    size: 50, 50
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            pos: self.center
            size: self.size

<GroundBlock>
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'ground.png'

<DarkforcesGame>:
    player: main_char
    enemy: main_enemy

    canvas:
        Color:
            rgb: .2,.3,1
        Rectangle:
            pos: 0,0
            size: root.width, root.height
    
    Player:
        id: main_char
        center: self.parent.center

    Player:
        id: main_enemy
        center: [0, 10]

