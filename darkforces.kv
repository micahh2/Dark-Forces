<Player>:
    size: 50, 50
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            pos: self.center
            size: self.size

<GroundBlock>:
	size: 64, 64
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'ground.png'

<DarkforcesGame>:
    player: main_char

    canvas:
        Color:
            rgb: .2,.3,1
        Rectangle:
            pos: 0,0
            size: root.width, root.height

    Player:
        id: main_char
        center: self.parent.center
